<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/conference_rows_padding"
    card_view:cardBackgroundColor="@color/colorDarkBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/conference_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/conference_row_image_size"
            android:background="@drawable/no_image"
            tools:ignore="ContentDescription"
            android:gravity="top" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/conference_rows_padding">

            <TextView
                android:id="@+id/conference_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conferencerow_name_string"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conference_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/conference_row_date_text_margin"
                android:text="@string/conferencerow_date_string"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>